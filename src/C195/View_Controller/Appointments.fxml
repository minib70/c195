<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="690.0" prefWidth="1000.0" stylesheets="@material.css" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <VBox prefHeight="200.0" prefWidth="100.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
            <Label fx:id="labelAppointmentTitle" alignment="TOP_CENTER" prefHeight="53.0" prefWidth="1000.0" stylesheets="@material.css" text="Appointments" textFill="#5d9dfc">
               <font>
                  <Font size="36.0" />
               </font>
            </Label>
            <HBox prefHeight="100.0" prefWidth="200.0" spacing="20.0">
               <children>
                  <RadioButton fx:id="radioAllAppointments" minWidth="0.0" mnemonicParsing="false" prefHeight="40.0" text="All">
                     <toggleGroup>
                        <ToggleGroup fx:id="toggleGroupAppointmentView" />
                     </toggleGroup>
                  </RadioButton>
                  <RadioButton fx:id="radioMonthlyAppointments" mnemonicParsing="false" text="Monthly" toggleGroup="$toggleGroupAppointmentView" />
                  <RadioButton fx:id="radioWeeklyAppointments" mnemonicParsing="false" text="Weekly" toggleGroup="$toggleGroupAppointmentView" />
                  <Region prefHeight="40.0" prefWidth="580.0" />
                  <Button fx:id="buttonRefreshData" mnemonicParsing="false" onAction="#buttonRefreshDataClicked" prefHeight="40.0" prefWidth="98.0" text="Refresh" />
               </children>
               <padding>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </padding>
               <VBox.margin>
                  <Insets right="10.0" />
               </VBox.margin>
            </HBox>
            <AnchorPane prefHeight="628.0" prefWidth="1000.0">
               <children>
                  <TableView fx:id="tableViewAppointments" prefHeight="200.0" prefWidth="200.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                    <columns>
                        <TableColumn fx:id="columnAppointmentsTitle" prefWidth="94.0" text="Title" />
                      <TableColumn fx:id="columnAppointmentsDescription" prefWidth="94.0" text="Description" />
                      <TableColumn fx:id="columnAppointmentsContact" text="Contact" />
                        <TableColumn fx:id="columnAppointmentsLocation" prefWidth="378.0" text="Location" />
                        <TableColumn fx:id="columnAppointmentsStart" prefWidth="185.0" text="Start" />
                        <TableColumn fx:id="columnAppointmentsEnd" prefWidth="233.0" text="End" />
                    </columns>
                  </TableView>
               </children>
               <VBox.margin>
                  <Insets left="15.0" right="15.0" />
               </VBox.margin>
            </AnchorPane>
            <HBox prefHeight="100.0" prefWidth="200.0" spacing="10.0">
               <children>
                <Button fx:id="buttonCustomers" mnemonicParsing="false" onAction="#customersButtonClicked" prefHeight="40.0" prefWidth="300.0" text="Customers" />
                  <Region prefHeight="200.0" prefWidth="200.0" />
                  <Button mnemonicParsing="false" prefHeight="40.0" prefWidth="300.0" text="Add New Appointment" />
                  <Region prefHeight="200.0" prefWidth="200.0" />
                  <Button mnemonicParsing="false" prefWidth="300.0" text="Modify Appointment" />
                  <Region prefHeight="200.0" prefWidth="200.0" />
                  <Button mnemonicParsing="false" prefWidth="300.0" text="Delete Appointment" />
               </children>
               <VBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </VBox.margin>
               <padding>
                  <Insets top="10.0" />
               </padding>
            </HBox>
         </children>
      </VBox>
   </children>
</AnchorPane>
